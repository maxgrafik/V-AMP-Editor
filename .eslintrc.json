{
    "env": {
        "browser": true,
        "amd": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 8
    },
    "rules": {
        "no-unused-vars": "warn",
        "eqeqeq": "warn",
        "comma-dangle": ["warn", "only-multiline"],
        "indent": ["error", 4],
        "quotes": ["error", "double", { "avoidEscape": true }],
        "semi": ["error", "always"]
    }
}
